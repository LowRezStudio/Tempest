		"proto-generate": "rimraf src/lib/rpc/* && protoc --ts_out src/lib/rpc --ts_opt server_none --proto_path ../Tempest.Protocol ../Tempest.Protocol/**/*.proto && prettier --write src/lib/rpc/**/*.ts",
