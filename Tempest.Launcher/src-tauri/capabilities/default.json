{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"opener:default",
		"shell:allow-kill",
		"shell:allow-open",
		{
			"identifier": "shell:allow-spawn",
			"allow": [
				{
					"name": "dotnet",
					"cmd": "dotnet",
					"args": true
				},
				{
					"name": "binaries/tempest-cli",
					"args": true,
					"sidecar": true
				}
			]
		},
		{
			"identifier": "shell:allow-execute",
			"allow": [
				{
					"name": "dotnet",
					"cmd": "dotnet",
					"args": true
				},
				{
					"name": "binaries/tempest-cli",
					"args": true,
					"sidecar": true
				}
			]
		},
		"http:default",
		{
			"identifier": "http:allow-fetch",
			"allow": [
				{
					"url": "http://localhost:5197"
				}
			]
		},
		"dialog:default",
		"os:default"
	]
}
