{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-kill",
    "shell:allow-open",
    "shell:allow-stdin-write",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "dotnet",
          "cmd": "dotnet",
          "args": true
        },
        {
          "name": "binaries/tempest-cli",
          "args": true,
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "dotnet",
          "cmd": "dotnet",
          "args": true
        },
        {
          "name": "binaries/tempest-cli",
          "args": true,
          "sidecar": true
        }
      ]
    },
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        {
          "url": "http://localhost:5197"
        }
      ]
    },
    "dialog:default",
    "os:default",
    "fs:default",
    "fs:allow-exists",
    "fs:allow-read-dir",
    "fs:allow-mkdir"
  ]
}
